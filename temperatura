StaticJsonDocument<JSON_OBJECT_SIZE(64)> inputDoc;
StaticJsonDocument<JSON_OBJECT_SIZE(4)> outputDoc;
char outputBuffer[128];

unsigned char temperaturaAws = 0;

class SensorTemperatura {
  private:
    DHT dht;

  public:
    SensorTemperatura(int pin, int type) : dht(pin, type) {}

    void begin() {
      dht.begin();
    }

    float leerTemperatura() {
      return dht.readTemperature();
    }

    float leerHumedad() {
      return dht.readHumidity();
    }
};

class PantallaLed {
  private:
    LiquidCrystal_I2C lcd;

  public:
    PantallaLed(uint8_t addr, uint8_t cols, uint8_t rows) : lcd(addr, cols, rows) {}

    void begin() {
      lcd.init();
      lcd.backlight();
      lcd.setCursor(0, 0);
      lcd.print("Iniciando...");
      delay(2000);
      lcd.clear();
    }

    void clear() {
      lcd.clear();
    }

    void EscribirTemperatura(float temperatura) {
      lcd.setCursor(0, 0);
      lcd.print("Temp: ");
      lcd.print(temperatura);
      lcd.print(" C");
    }

    void EscribirHumedad(float humidity) {
      lcd.setCursor(0, 1);
      lcd.print("Hum: ");
      lcd.print(humidity);
      lcd.print(" %");
    }
};

class WiFiManagerWrapper {
  public:
    void connect() {
      WiFiManager wifiManager;
      wifiManager.autoConnect("AutoConnectAP");
      Serial.println("Connected to Wi-Fi!");
    }
};

class AWSIoTCredentials {
  public:
    static void setupCredentials(WiFiClientSecure &wiFiClient) {
      wiFiClient.setCACert(AMAZON_ROOT_CA1);
      wiFiClient.setCertificate(CERTIFICATE);
      wiFiClient.setPrivateKey(PRIVATE_KEY);
    }
};

class MQTTManager {
  private:
    WiFiClientSecure &wiFiClient;
    PubSubClient mqttClient;

  public:
    MQTTManager(WiFiClientSecure &client) : wiFiClient(client), mqttClient(client) {}

    void setup() {
      mqttClient.setServer(MQTT_BROKER_HOST, MQTT_BROKER_PORT);
      mqttClient.setCallback(callback);

      Serial.print("Connecting to " + String(MQTT_BROKER_HOST));
      if (mqttClient.connect(MQTT_CLIENT_ID)) {
        Serial.println(" Connected!");
        delay(100);
        mqttClient.subscribe(UPDATE_DELTA_TOPIC);
        Serial.println("Subscribed to " + String(UPDATE_DELTA_TOPIC));
        delay(100);
      }
    }

    void loop() {
      if (mqttClient.connected()) {
        mqttClient.loop();
      } else {
        Serial.println("MQTT broker not connected!");
        delay(2000);
      }
    }

    void publish(const char *topic, const char *message) {
      mqttClient.publish(topic, message);
    }

    static void callback(const char *topic, byte *payload, unsigned int length) {
      String message;
      for (int i = 0; i < length; i++) message += String((char) payload[i]);
      Serial.println("Message from topic " + String(topic) + ":" + message);

      DeserializationError err = deserializeJson(inputDoc, payload);

      if (!err) {
        if (String(topic) == UPDATE_DELTA_TOPIC) {
          temperaturaAws = inputDoc["state"]["desired"]["temperatura"].as<int8_t>();
        }
      }
    }
};

SensorTemperatura sensor(DHTPIN, DHTTYPE);
PantallaLed pantalla(I2C_ADDR, 16, 2);
WiFiManagerWrapper wifiManager;
WiFiClientSecure wiFiClient;
MQTTManager mqttManager(wiFiClient);

void reportTemperatura() {
  outputDoc["state"]["reported"]["temperatura"] = temperaturaAws;
  serializeJson(outputDoc, outputBuffer);
  mqttManager.publish(UPDATE_TOPIC, outputBuffer);
}

void reportar(int temperatura) {
  outputDoc["state"]["reported"]["temperatura"] = temperatura;
  serializeJson(outputDoc, outputBuffer);
  mqttManager.publish(UPDATE_TOPIC, outputBuffer);
  temperaturaAws = inputDoc["state"]["desired"]["temperatura"].as<int8_t>();
}

void escribirEnPantalla(float temperatura) {
  temperaturaAws = inputDoc["state"]["desired"]["temperatura"].as<int8_t>();
  pantalla.EscribirTemperatura(temperatura);
}

void setup() {
  Serial.begin(115200);
  Wire.begin(ledPinSDA, ledPinSCL);  
  sensor.begin();  
  pantalla.begin();
  wifiManager.connect();
  AWSIoTCredentials::setupCredentials(wiFiClient);
  mqttManager.setup();
  escribirEnPantalla(0);
}

void loop() {
  float temperatura = sensor.leerTemperatura();
  reportar(temperatura);
  escribirEnPantalla(temperatura);
  Serial.println(temperaturaAws);
  delay(5000);
  mqttManager.loop();
}
